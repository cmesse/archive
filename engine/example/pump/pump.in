#/usr/env/bin bash
BINDIR=@prefix@/bin
LIB=@LIBNAME@.@SUFFIX@

# get the symbol name
if [ $(uname -s) == "Darwin" ]; then
	SYMBOL=$(nm $LIB | grep $2 | cut -d" " -f3 | sed 's/__/_/' )
else
	SYMBOL=$(nm $LIB | grep $2 | cut -d" " -f3 )
fi

# run the script
$BINDIR/pump --library $LIB --fluid $1 --symbol $SYMBOL
